generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  nickname   String?
  score      Int      @default(0)
  role       String   @default("user")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model DictionaryEntry { 
  id          String    @id @default(cuid())
  word        String
  language    String    @default("ru")
  meaning     String?
  notes       String?
  source      String?
  difficulty  String?   
  tags        String[]  @default([])
  createdAt   DateTime  @default(now())
}
